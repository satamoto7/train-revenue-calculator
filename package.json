{
  "name": "train-revenue-calculator",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://satamoto7.github.io/train-revenue-calculator",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"package.json\" \"README.md\" \"PLAN.md\" \"docs/frontend-modernization-best-practices-plan.md\" \".prettierrc.json\" \".eslintrc.cjs\"",
    "format:check": "prettier --check \"package.json\" \"README.md\" \"PLAN.md\" \"docs/frontend-modernization-best-practices-plan.md\" \".prettierrc.json\" \".eslintrc.cjs\"",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.4",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "vite": "^7.3.1",
    "@vitejs/plugin-react": "^5.0.4",
    "vitest": "^3.2.4",
    "jsdom": "^26.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.css": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
